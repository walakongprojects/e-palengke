<%- include('../partials/adminheader') %>

  <div class="container">
    <h1 class="display-4">Edit Category</h1>
    <a href="/admin/categories" role="button" class="btn btn-primary">Back to Categories</a>
  </div>
  <br>
  <form action="/admin/categories/edit-category/<%= id %>" method="POST">
  
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" value="<%= title %>" name="title" class="form-control form-control-sm" placeholder="Title">
    </div>

    <button class="btn btn-outline-primary" type="submit">Submit</button>

  </form>


<%- include('../partials/adminfooter') %>