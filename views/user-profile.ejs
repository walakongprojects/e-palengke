<% include ./partials/header %>

<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 col-12">
      <div class="my__account__wrapper">
          <h3 class="account__title">User profile</h3>
              <div class="account__form">
                  <div class="input__box">
                      <label>Name </label>
                      <input value="<%= foundUser.name %>" disabled name="name" type="text">
                  </div>			
                  <div class="input__box">
                      <label>Email</label>
                      <input value="<%= foundUser.email %>" disabled name="email" type="email">
                  </div>
                  <div class="input__box">
                      <label>City</label>
                      <input value="<%= foundUser.city %>" disabled name="city" type="text">
                  </div>
                  <div class="input__box">
                      <label>Address</label>
                      <input value="<%= foundUser.address %>" disabled name="address" type="text">
                  </div>	
                  <div class="input__box">
                      <label>Phone number</label>
                      <input value="<%= foundUser.phone_number %>" disabled name="username" type="text">
                  </div>	
                  <p class="mt-3 text-center"><a href="/users/profile/<%= user.username %>/edit">Update Profile</a></p>
              </div>
      </div>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>

  <% include ./partials/footer %>
