<% include ./partials/header %>

<!-- Start My Account Area -->
<section class="my_account_area pt--80 pb--55 bg--white">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-12">
                <div class="my__account__wrapper">
                    <h3 class="account__title">Login</h3>
                    <form action="/users/login" method="POST">
                        <div class="account__form">
                            <div class="input__box">
                                <label>Username or email address <span>*</span></label>
                                <input required name="username" type="text">
                            </div>
                            <div class="input__box">
                                <label>Password<span>*</span></label>
                                <input required name="password" type="password">
                            </div>
                            <div class="form__btn">
                                <button type="submit">Login</button>
                            </div>
                            <a class="forget_pass" href="/users/forgot-password">Lost your password?</a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 col-12">
                <div class="my__account__wrapper"> 
                    <h3 class="account__title">Register</h3>
                    <form action="/users/register" method="POST">
                        <div class="account__form">
                            <div class="input__box">
                                <label>Name <span>*</span></label>
                                <input required name="name" type="text">
                            </div>			
                            <div class="input__box">
                                <label>Email<span>*</span></label>
                                <input required name="email" type="email">
                            </div>
                            <div class="input__box">
                                    <label>Phone number <span>*</span></label>
                                    <input required name="phone_num" type="text">
                                </div>
                            <div class="input__box">
                                <label>City</label>
                                <select name="barangay" class="select__option">
                                    <% barangays.forEach(barangay => { %>
                                        <option value="<%= barangay %>"><%= barangay %></option>
                                    <% })  %>
                                </select>
                            </div>
                            <div class="input__box">
                                <label>Address<span>*</span></label>
                                <input required name="address" type="text">
                            </div>	<div class="input__box">
                                <label>Username<span>*</span></label>
                                <input required name="username" type="text">
                            </div>	
                            <div class="input__box">
                                <label>Password<span>*</span></label>
                                <input required type="password" name="password">
                            </div>
                            <div class="input__box">
                                <label>Confirm Password<span>*</span></label>
                                <input required name="password2" type="password">
                            </div>
                            <div class="form__btn">
                                <button type="submit">Register</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End My Account Area -->

<% include ./partials/footer %>