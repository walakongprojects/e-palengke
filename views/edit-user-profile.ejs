                      <input value="<%= foundUser.name %>"  name="name" type="text">
                  </div>			
                  <div class="input__box">
                      <label>Email</label>
                      <input value="<%= foundUser.email %>"  name="email" type="email">
                  </div>
                  <div class="input__box">
                      <label>City</label>
                      <select name="city" class="select__option">
                        <option value="Caloocan">Caloocan</option>
