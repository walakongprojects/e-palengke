<% include ./partials/header %>

<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 col-12">
      <div class="my__account__wrapper">
          <h3 class="account__title">User profile</h3>
          <form action="/users/profile/<%= user.username %>/edit" method="POST">
              <div class="account__form">
                  <div class="input__box">
                      <label>Name </label>
                      <input value="<%= foundUser.name %>"  name="name" type="text">
                  </div>			
                  <div class="input__box">
                      <label>Email</label>
                      <input value="<%= foundUser.email %>"  name="email" type="email">
                  </div>
                  <div class="input__box">
                      <label>City</label>
                        <select name="barangay" class="select__option">
                          <% barangays.forEach(barangay => { %>
                            <% if (barangay === foundUser.barangay) { %>
                              <option value="<%= barangay %>" selected><%= barangay %></option>
                            <% } else { %>
                              <option value="<%= barangay %>"><%= barangay %></option>
                            <% } %>
                          <% })  %>
                      </select>
                  </div>
                  <div class="input__box">
                      <label>Address</label>
                      <input value="<%= foundUser.address %>"  name="address" type="text">
                  </div>	
                  <div class="input__box">
                      <label>Phone number</label>
                      <input value="<%= foundUser.phone_number %>"  name="phone_num" type="text">
                  </div>	
                  <div class="form__btn">
                      <button type="submit">Update</button>
                  </div>
              </div>
          </form>
      </div>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>

  <% include ./partials/footer %>
